<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0f7f9">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:text="Add New Expense"
            android:textSize="26sp"
            android:textColor="#093f45"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_category"
            android:hint="Category (e.g. Food)"
            android:background="@drawable/edittext_rounded_teal"
            android:textColor="#093f45"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/edit_date"
            android:hint="Date (e.g. 2025-06-18)"
            android:background="@drawable/edittext_rounded_teal"
            android:textColor="#093f45"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/edit_amount"
            android:hint="Amount (e.g. 1500)"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_rounded_teal"
            android:textColor="#093f45"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/edit_note"
            android:hint="Note (optional)"
            android:background="@drawable/edittext_rounded_teal"
            android:textColor="#093f45"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/button_save"
            android:text="ðŸ’¾ Save Expense"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#26c6da"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
